
public class SwitchPractice {

	public static void main(String[] args) {
		System.out.println(findingDay(7));

	}

	public static String findingDay(int day) {
		String res="";
		switch(day) {
		
		case 0:
			res = "Sunday";
			break;
		case 1:
			res = "Monday";
			break;
		case 2:
			res = "Tues";
			break;
		case 3:
			res = "Wed";
			break;
		case 4:
			res = "Thru";
			break;
		case 5:
			res = "Fri";
			break;
		case 6:
			res = "Sat";
			break;
		default:
			System.out.println("Enter valid day!");
		
		}
		return res;

	}

}
